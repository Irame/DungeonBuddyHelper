<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Script file="PopupInsertedFrame.lua"/>

    <Frame name="DBH_PopupInsertedFrame" mixin="DBH_PopupInsertedFrameMixin" hidden="true">
        <Frames>
            <DropdownButton parentKey="KeySelectDropdown" inherits="WowStyle1DropdownTemplate">
                <Size x="200" y="25"></Size>
                <Anchors>
                    <Anchor point="TOP" y="-10"/>
                </Anchors>
            </DropdownButton>
            <DropdownButton parentKey="RunTypeDropdown" inherits="WowStyle1DropdownTemplate">
                <Size x="200" y="25"></Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.KeySelectDropdown" relativePoint="BOTTOMLEFT" y="-10"/>
                </Anchors>
            </DropdownButton>
            <Frame inherits="DBH_RoleSelectTemplate" parentKey="RoleSelect">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeKey="$parent.RunTypeDropdown" relativePoint="BOTTOMRIGHT" x="0" y="-10"/>
                </Anchors>
            </Frame>
            <EditBox parentKey="SingleLineInputBox" inherits="InputBoxTemplate" mixin="DBH_CommandInputBoxMixin">
                <Size y="20"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" x="5"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
                <Scripts>
                    <OnEscapePressed method="OnEscapePressed"/>
                    <OnMouseUp method="OnMouseUp"/>
                    <OnChar method="OnChar"/>
                </Scripts>
                <FontString inherits="ChatFontNormal"/>
            </EditBox>
			<Frame parentKey="MultiLineInput" inherits="TooltipBackdropTemplate">
				<Size y="95"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
                <Frames>
                    <EditBox parentKey="Text" multiLine="true" mixin="DBH_CommandInputBoxMixin" >
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="5" y="-5"/>
                            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-5" y="5"/>
                        </Anchors>
						<Scripts>
                            <OnEscapePressed method="OnEscapePressed"/>
                            <OnMouseUp method="OnMouseUp"/>
                            <OnChar method="OnChar"/>
						</Scripts>
						<FontString inherits="ChatFontSmall"/>
					</EditBox>
                </Frames>
                <Scripts>
                    <OnLoad inherit="append">
                        self:GetParent().MultiLineInputBox = self.Text
                    </OnLoad>
                </Scripts>
			</Frame>
        </Frames>
        <Layers>
            <Layer>
                <FontString text="Missing Roles:" inherits="GameFontNormalSmall">
                    <Scripts>
                        <OnLoad function="MPLM_LocalizeFontString"/>
                    </Scripts>
                    <Anchors>
                        <Anchor point="RIGHT" relativeKey="$parent.RoleSelect" relativePoint="LEFT" x="-5" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Size x="290" y="135"/>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnShow method="OnShow"/>
            <OnHide method="OnHide"/>
            <OnEvent method="OnEvent"/>
        </Scripts>
    </Frame>
</Ui>